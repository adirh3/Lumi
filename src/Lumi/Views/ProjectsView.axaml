<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lumi.ViewModels"
             xmlns:models="using:Lumi.Models"
             x:Class="Lumi.Views.ProjectsView"
             x:CompileBindings="False">

  <Grid ColumnDefinitions="260,*">

    <!-- â”€â”€ Left: item list â”€â”€ -->
    <Border BorderBrush="{DynamicResource Brush.BorderSubtle}" BorderThickness="0,0,1,0">
      <DockPanel Margin="0,16,0,0">
        <!-- Header row -->
        <DockPanel DockPanel.Dock="Top" Margin="16,0,16,0">
          <Button DockPanel.Dock="Right" Classes="subtle" Padding="7,5" MinHeight="0"
                  CornerRadius="{DynamicResource Radius.Base}"
                  Command="{Binding NewProjectCommand}" ToolTip.Tip="New project">
            <PathIcon Data="M12 4a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2h-6v6a1 1 0 1 1-2 0v-6H5a1 1 0 1 1 0-2h6V5a1 1 0 0 1 1-1z"
                      Width="14" Height="14" Foreground="{DynamicResource Brush.TextSecondary}" />
          </Button>
          <TextBlock Text="Projects" FontSize="13" FontWeight="SemiBold"
                     Foreground="{DynamicResource Brush.TextSecondary}"
                     VerticalAlignment="Center" />
        </DockPanel>

        <!-- Search -->
        <Border DockPanel.Dock="Top" Margin="12,10,12,0">
          <TextBox Watermark="Searchâ€¦" Text="{Binding SearchQuery}"
                   Padding="10,5" FontSize="12" />
        </Border>

        <!-- Item list -->
        <ListBox Classes="sidebar-list" Margin="8,8,8,8"
                 ItemsSource="{Binding Projects}"
                 SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                 SelectionMode="Single">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Panel Background="Transparent">
                <Panel.ContextMenu>
                  <ContextMenu>
                    <MenuItem Header="Delete"
                              Command="{Binding $parent[UserControl].DataContext.DeleteProjectCommand}"
                              CommandParameter="{Binding}" />
                  </ContextMenu>
                </Panel.ContextMenu>
                <StackPanel Spacing="1">
                  <TextBlock Text="{Binding Name}" FontSize="13" />
                  <TextBlock FontSize="11" Foreground="{DynamicResource Brush.TextTertiary}"
                             Text="{Binding CreatedAt, StringFormat='{}{0:MMM d, yyyy}'}" />
                </StackPanel>
              </Panel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </DockPanel>
    </Border>

    <!-- â”€â”€ Right: editor â”€â”€ -->
    <Panel Grid.Column="1">
      <!-- Editor form -->
      <ScrollViewer IsVisible="{Binding IsEditing}"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto" Padding="36,24">
        <StackPanel Spacing="20">
          <TextBlock Text="Project Editor" FontSize="15" FontWeight="SemiBold" />

          <StackPanel Spacing="4">
            <TextBlock Text="NAME" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditName}" Watermark="e.g. My App" />
          </StackPanel>

          <StackPanel Spacing="4">
            <TextBlock Text="INSTRUCTIONS" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditInstructions}" AcceptsReturn="True" TextWrapping="Wrap"
                     MinHeight="260"
                     Watermark="Special instructions for chats in this projectâ€¦" />
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
            <Button Classes="accent" Content="Save" Padding="18,7" MinHeight="0"
                    Command="{Binding SaveProjectCommand}" />
            <Button Classes="subtle" Content="Cancel" Padding="18,7" MinHeight="0"
                    Command="{Binding CancelEditCommand}" />
          </StackPanel>
        </StackPanel>
      </ScrollViewer>

      <!-- Empty state -->
      <StackPanel IsVisible="{Binding !IsEditing}"
                  HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6" Opacity="0.4">
        <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center" />
        <TextBlock Text="Select or create a project" FontSize="13"
                   HorizontalAlignment="Center" />
      </StackPanel>
    </Panel>
  </Grid>
</UserControl>
