<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lumi.ViewModels"
             xmlns:models="using:Lumi.Models"
             x:Class="Lumi.Views.ProjectsView"
             x:CompileBindings="False">

  <Panel>
      <!-- Editor form -->
      <ScrollViewer IsVisible="{Binding IsEditing}"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto" Padding="36,24">
        <StackPanel Spacing="20">
          <TextBlock Text="Project Editor" FontSize="15" FontWeight="SemiBold" />

          <StackPanel Spacing="4">
            <TextBlock Text="NAME" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditName}" Watermark="e.g. My App" />
          </StackPanel>

          <StackPanel Spacing="4">
            <TextBlock Text="INSTRUCTIONS" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditInstructions}" AcceptsReturn="True" TextWrapping="Wrap"
                     MinHeight="200"
                     Watermark="Special instructions for chats in this projectâ€¦" />
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
            <Button Classes="accent" Content="Save" Padding="18,7" MinHeight="0"
                    Command="{Binding SaveProjectCommand}" />
            <Button Classes="subtle" Content="Cancel" Padding="18,7" MinHeight="0"
                    Command="{Binding CancelEditCommand}" />
          </StackPanel>

          <!-- â”€â”€ Chats in this project â”€â”€ -->
          <StackPanel Spacing="8" IsVisible="{Binding SelectedProject, Converter={x:Static ObjectConverters.IsNotNull}}"
                      Margin="0,12,0,0">
            <TextBlock Text="CHATS" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <StackPanel IsVisible="{Binding !ProjectChats.Count}" Margin="0,4,0,0">
              <TextBlock Text="No chats in this project yet."
                         FontSize="12" Foreground="{DynamicResource Brush.TextTertiary}" />
            </StackPanel>
            <ItemsControl ItemsSource="{Binding ProjectChats}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Button Classes="subtle" HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Left"
                          Padding="12,8" MinHeight="0" Margin="0,1"
                          CornerRadius="{DynamicResource Radius.Base}"
                          Command="{Binding $parent[UserControl].DataContext.OpenChatCommand}"
                          CommandParameter="{Binding}">
                    <DockPanel>
                      <TextBlock DockPanel.Dock="Right" FontSize="11"
                                 Foreground="{DynamicResource Brush.TextTertiary}"
                                 VerticalAlignment="Center"
                                 Text="{Binding UpdatedAt, StringFormat='{}{0:MMM d}'}" />
                      <TextBlock Text="{Binding Title}" FontSize="13"
                                 TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </DockPanel>
                  </Button>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </StackPanel>
      </ScrollViewer>

      <!-- Empty state -->
      <StackPanel IsVisible="{Binding !IsEditing}"
                  HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6" Opacity="0.4">
        <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center" />
        <TextBlock Text="Select or create a project" FontSize="13"
                   HorizontalAlignment="Center" />
      </StackPanel>
  </Panel>
</UserControl>
