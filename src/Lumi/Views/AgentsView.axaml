<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lumi.ViewModels"
             xmlns:models="using:Lumi.Models"
             x:Class="Lumi.Views.AgentsView"
             x:CompileBindings="False">

  <Grid ColumnDefinitions="260,*">

    <!-- ── Left: item list ── -->
    <Border BorderBrush="{DynamicResource Brush.BorderSubtle}" BorderThickness="0,0,1,0">
      <DockPanel Margin="0,16,0,0">
        <!-- Header row -->
        <DockPanel DockPanel.Dock="Top" Margin="16,0,16,0">
          <Button DockPanel.Dock="Right" Classes="subtle" Padding="7,5" MinHeight="0"
                  CornerRadius="{DynamicResource Radius.Base}"
                  Command="{Binding NewAgentCommand}" ToolTip.Tip="New Lumi">
            <PathIcon Data="M12 4a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2h-6v6a1 1 0 1 1-2 0v-6H5a1 1 0 1 1 0-2h6V5a1 1 0 0 1 1-1z"
                      Width="14" Height="14" Foreground="{DynamicResource Brush.TextSecondary}" />
          </Button>
          <TextBlock Text="Lumis" FontSize="13" FontWeight="SemiBold"
                     Foreground="{DynamicResource Brush.TextSecondary}"
                     VerticalAlignment="Center" />
        </DockPanel>

        <!-- Search -->
        <Border DockPanel.Dock="Top" Margin="12,10,12,0">
          <TextBox Watermark="Search…" Text="{Binding SearchQuery}"
                   Padding="10,5" FontSize="12" />
        </Border>

        <!-- Item list -->
        <ListBox Classes="sidebar-list" Margin="8,8,8,8"
                 ItemsSource="{Binding Agents}"
                 SelectedItem="{Binding SelectedAgent, Mode=TwoWay}"
                 SelectionMode="Single">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Panel Background="Transparent">
                <Panel.ContextMenu>
                  <ContextMenu>
                    <MenuItem Header="Delete"
                              Command="{Binding $parent[UserControl].DataContext.DeleteAgentCommand}"
                              CommandParameter="{Binding}" />
                  </ContextMenu>
                </Panel.ContextMenu>
                <StackPanel Spacing="1">
                  <TextBlock Text="{Binding Name}" FontSize="13" TextTrimming="CharacterEllipsis" />
                  <TextBlock Text="{Binding Description}" FontSize="11"
                             Foreground="{DynamicResource Brush.TextTertiary}"
                             TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />
                </StackPanel>
              </Panel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </DockPanel>
    </Border>

    <!-- ── Right: editor ── -->
    <Panel Grid.Column="1">
      <!-- Editor form -->
      <ScrollViewer IsVisible="{Binding IsEditing}"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto" Padding="36,24">
        <StackPanel Spacing="20">
          <TextBlock Text="Lumi Editor" FontSize="15" FontWeight="SemiBold" />

          <StackPanel Spacing="4">
            <TextBlock Text="NAME" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditName}" Watermark="e.g. Daily Planner" />
          </StackPanel>

          <Grid ColumnDefinitions="72,20,*">
            <StackPanel Spacing="4">
              <TextBlock Text="ICON" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                         LetterSpacing="0.8" />
              <TextBox Text="{Binding EditIconGlyph}" Watermark="✦"
                       HorizontalContentAlignment="Center" />
            </StackPanel>
            <StackPanel Grid.Column="2" Spacing="4">
              <TextBlock Text="DESCRIPTION" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                         LetterSpacing="0.8" />
              <TextBox Text="{Binding EditDescription}"
                       Watermark="What does this Lumi do?" />
            </StackPanel>
          </Grid>

          <StackPanel Spacing="4">
            <TextBlock Text="SYSTEM PROMPT" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditSystemPrompt}" AcceptsReturn="True" TextWrapping="Wrap"
                     MinHeight="260"
                     Watermark="Instructions that define this Lumi's personality and behavior…" />
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
            <Button Classes="accent" Content="Save" Padding="18,7" MinHeight="0"
                    Command="{Binding SaveAgentCommand}" />
            <Button Classes="subtle" Content="Cancel" Padding="18,7" MinHeight="0"
                    Command="{Binding CancelEditCommand}" />
          </StackPanel>
        </StackPanel>
      </ScrollViewer>

      <!-- Empty state -->
      <StackPanel IsVisible="{Binding !IsEditing}"
                  HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6" Opacity="0.4">
        <TextBlock Text="✦" FontSize="32" HorizontalAlignment="Center" />
        <TextBlock Text="Select or create a Lumi" FontSize="13"
                   HorizontalAlignment="Center" />
      </StackPanel>
    </Panel>
  </Grid>
</UserControl>
