<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lumi.ViewModels"
             xmlns:models="using:Lumi.Models"
             x:Class="Lumi.Views.SkillsView"
             x:CompileBindings="False">

  <Panel>
      <!-- Editor form -->
      <ScrollViewer IsVisible="{Binding IsEditing}"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto" Padding="36,24">
        <StackPanel Spacing="20">
          <TextBlock Text="Skill Editor" FontSize="{DynamicResource Font.SizeSubtitle}" FontWeight="SemiBold" />

          <StackPanel Spacing="4">
            <TextBlock Text="NAME" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditName}" Watermark="e.g. Word Creator" />
          </StackPanel>

          <Grid ColumnDefinitions="72,20,*">
            <StackPanel Spacing="4">
              <TextBlock Text="ICON" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                         LetterSpacing="0.8" />
              <TextBox Text="{Binding EditIconGlyph}" Watermark="⚡"
                       HorizontalContentAlignment="Center" />
            </StackPanel>
            <StackPanel Grid.Column="2" Spacing="4">
              <TextBlock Text="DESCRIPTION" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                         LetterSpacing="0.8" />
              <TextBox Text="{Binding EditDescription}"
                       Watermark="Short description of what this skill does" />
            </StackPanel>
          </Grid>

          <StackPanel Spacing="4">
            <TextBlock Text="INSTRUCTIONS" FontSize="10" FontWeight="SemiBold" Opacity="0.5"
                       LetterSpacing="0.8" />
            <TextBox Text="{Binding EditContent}" AcceptsReturn="True" TextWrapping="Wrap"
                     MinHeight="260"
                     Watermark="Markdown instructions for how to use this skill…" />
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
            <Button Classes="accent" Content="Save" Padding="18,7" MinHeight="0"
                    Command="{Binding SaveSkillCommand}" />
            <Button Classes="subtle" Content="Cancel" Padding="18,7" MinHeight="0"
                    Command="{Binding CancelEditCommand}" />
          </StackPanel>
        </StackPanel>
      </ScrollViewer>

      <!-- Empty state -->
      <StackPanel IsVisible="{Binding !IsEditing}"
                  HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6" Opacity="0.4">
        <TextBlock Text="⚡" FontSize="32" HorizontalAlignment="Center" />
        <TextBlock Text="Select or create a skill" FontSize="{DynamicResource Font.SizeBody}"
                   HorizontalAlignment="Center" />
      </StackPanel>
  </Panel>
</UserControl>
